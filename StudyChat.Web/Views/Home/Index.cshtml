@{
    ViewData["Title"] = "StudyChat - Q&A Platform";
}

<head>
    <style>

        section {
            text-align: center;
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #333;
        }

        p {
            color: #555;
        }

        img {
            max-width: 350px;
            height: 200px;
        }
    </style>
</head>
<body>
    <section ">
        <h2>Welcome to StudyChat!</h2>
        <p>Ask questions, get answers, and engage with your peers and teachers in a collaborative learning environment.</p>
        <div class="dp">
            <img src="~/images/" class="dpicn">
        </div>
        <img src ="~/images/studychat.jpg" alt="StudyChat Image">
    </section>

    <div class="text-center">
        <h6>"StudyChat - A student-teacher Q&A platform. Register, log in, ask questions, 
            and engage in educational discussions. Secure authentication, role-based access,
            and efficient data management. Tech: C#, ASP .NET Core, MSSQL/MySQL, Entity Framework, NLayers. Contribute to collaborative learning! 🚀📚"</h6>
    </div>

</body>

