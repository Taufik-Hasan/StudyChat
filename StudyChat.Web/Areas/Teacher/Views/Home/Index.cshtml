@{
	Layout = "~/Views/Shared/_LayoutForTeacher.cshtml";
}
@{
	ViewData["Title"] = "Teacher-Dashboard";
}

@model IEnumerable<StudyChat.Core.Entities.Question>

<div>

	<div class="row d-flex align-items-center justify-content-center">
		<div class="col-md-8 card p-9 border-0">
			<br />
			<h2 class="text-align-content-center text-info text-center">Questions pool</h2>
			<div class="row">
				<div class="col-md-12">
					<br />
					@{
						int count = Model.Count();
						int i = count;
						if (count != 0)
						{
							@foreach (var question in Model)
							{
								<div class="card p-3 mb-3">
									<h5 class="text-info">Question: @i </h5>
									<p>@question.Content</p>
									<p>Asked by: @question.UserId</p>
									<p>@question.Id</p>
									<div>
										<a asp-area="Teacher" asp-controller="Home" asp-action="QuestionAnswer" asp-route-id="@question.Id" class="btn btn-primary">Edit</a>
										<a asp-area="Teacher" asp-controller="Home" asp-action="Setting"  class="btn btn-info">Details</a>
										<a asp-area="Teacher" asp-controller="Home" asp-action="DeleteUser" asp-route-id="@question.Id" class="btn btn-danger" onclick="return confirm('Are you sure, you want to delete this user!')">Delete</a>
									</div>
								</div>
								i--;
							}
						}
						else
						{
							<div class="col-md-12 card p-2">
								<br />
								<p class="text-align content-center text-danger text-center">
									No question asked yet by you! If you have any question, please ask.
								</p>
							</div>
						}

					}
				</div>
			</div>
		</div>
	</div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
} 